<?xml version="1.0" encoding="UTF-8" standalone="yes"?><letter><code>ResetPwLetter</code><enabled desc="Yes">true</enabled><name>Reset Password Letter</name><description>Reset Password Letter</description><channel>EMAIL</channel><retention_period></retention_period><customized desc="No">false</customized><patron_facing desc="Yes">true</patron_facing><updated_by/><labels link="https://api-eu.hosted.exlibrisgroup.com/almaws/v1/conf/code-tables/ResetPwLetter">ResetPwLetter</labels><xsl>&lt;?xml version="1.0" encoding="utf-8"?&gt;
&lt;xsl:stylesheet version="1.0" xmlns:xsl="http://www.w3.org/1999/XSL/Transform"&gt;

&lt;xsl:include href="header.xsl" /&gt;
&lt;xsl:include href="senderReceiver.xsl" /&gt;
&lt;xsl:include href="mailReason.xsl" /&gt;
&lt;xsl:include href="footer.xsl" /&gt;
&lt;xsl:include href="style.xsl" /&gt;
&lt;xsl:include href="recordTitle.xsl" /&gt;
&lt;xsl:template match="/"&gt;
	&lt;html&gt;
			&lt;xsl:if test="notification_data/languages/string"&gt;
				&lt;xsl:attribute name="lang"&gt;
					&lt;xsl:value-of select="notification_data/languages/string"/&gt;
				&lt;/xsl:attribute&gt;
			&lt;/xsl:if&gt;

		&lt;head&gt;
				&lt;title&gt;
					&lt;xsl:value-of select="notification_data/general_data/subject"/&gt;
				&lt;/title&gt;

			&lt;xsl:call-template name="generalStyle" /&gt;
		&lt;/head&gt;
		&lt;body&gt;
			&lt;xsl:call-template name="head" /&gt; &lt;!-- header.xsl --&gt;
			&lt;!-- &lt;xsl:call-template name="senderReceiver" /&gt; SenderReceiver.xsl --&gt;
			&lt;br/&gt;
			&lt;xsl:call-template name="toWhomIsConcerned" /&gt; &lt;!-- mailReason.xsl --&gt;
			&lt;div class="messageArea"&gt;
				&lt;div class="messageBody"&gt;
					&lt;table role='presentation'  cellspacing="0" cellpadding="5" border="0"&gt;
		              &lt;tr&gt;
		              	&lt;td&gt;
							@@bodyTextBeforeLink@@
														&lt;a&gt;
		                        &lt;xsl:attribute name="href"&gt;
		                          &lt;xsl:value-of select="notification_data/reset_pw_url" /&gt;
		                        &lt;/xsl:attribute&gt;
								@@linkLabel@@&lt;/a&gt;
							@@bodyTextAfterLink@@&lt;br/&gt;
		                &lt;/td&gt;
		              &lt;/tr&gt;
		            &lt;/table&gt;
					&lt;table role='presentation' &gt;
						&lt;tr&gt;
							&lt;td&gt;@@signature@@&lt;/td&gt;
						&lt;/tr&gt;
						&lt;tr&gt;
							&lt;td&gt;
								&lt;xsl:value-of select="notification_data/organization_unit/name" /&gt;
							&lt;/td&gt;
						&lt;/tr&gt;
						&lt;xsl:if test="notification_data/organization_unit/address/city !=''"&gt;
							&lt;tr&gt;
								&lt;td&gt;
									&lt;xsl:value-of select="notification_data/organization_unit/address/city" /&gt;
								&lt;/td&gt;
							&lt;/tr&gt;
						&lt;/xsl:if&gt;
						&lt;xsl:if test="notification_data/organization_unit/address/country !=''"&gt;
							&lt;tr&gt;
								&lt;td&gt;
									&lt;xsl:value-of select="notification_data/organization_unit/address/country" /&gt;
								&lt;/td&gt;
							&lt;/tr&gt;
						&lt;/xsl:if&gt;
					&lt;/table&gt;
		          &lt;/div&gt;
				&lt;/div&gt;
			&lt;xsl:call-template name="lastFooter" /&gt; &lt;!-- footer.xsl --&gt;
		&lt;/body&gt;
	&lt;/html&gt;
&lt;/xsl:template&gt;
&lt;/xsl:stylesheet&gt;</xsl></letter>