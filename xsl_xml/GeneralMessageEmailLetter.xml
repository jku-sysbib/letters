	&lt;xsl:template name="author"&gt;&#13;
		&lt;xsl:param name="beistrich" select="'false'"/&gt;&#13;
		&lt;xsl:if test="notification_data/request/display/author != ''"&gt;&#13;
			&lt;xsl:if test="$beistrich = 'true' "&gt;&#13;
				&lt;xsl:text&gt;, &lt;/xsl:text&gt;&#13;
			&lt;/xsl:if&gt;&#13;
			&lt;xsl:choose&gt;&#13;
				&lt;xsl:when test="notification_data/languages/string='de'"&gt;&#13;
				&lt;strong&gt;Verfasser: &lt;/strong&gt;&#13;
				&lt;/xsl:when&gt;&#13;
				&lt;xsl:otherwise&gt;&#13;
					&lt;strong&gt;Author: &lt;/strong&gt;&#13;
				&lt;/xsl:otherwise&gt;&#13;
			&lt;/xsl:choose&gt;&#13;
&#13;
			&lt;xsl:value-of select="notification_data/request/display/author"/&gt;&#13;
			&lt;xsl:call-template name="journal_title"&gt;&#13;
				&lt;xsl:with-param name="beistrich" select="'true'"/&gt;&#13;
			&lt;/xsl:call-template&gt;&#13;
		&lt;/xsl:if&gt;&#13;
		&lt;xsl:if test="notification_data/request/display/author = ''"&gt;&#13;
			&lt;xsl:call-template name="journal_title"&gt;&#13;
				&lt;xsl:with-param name="beistrich" select="$beistrich" /&gt;&#13;
			&lt;/xsl:call-template&gt;&#13;
		&lt;/xsl:if&gt;&#13;
	&lt;/xsl:template&gt;&#13;
&#13;
	&lt;xsl:template name="journal_title"&gt;&#13;
		&lt;xsl:param name="beistrich" select="'false'"/&gt;&#13;
		&lt;xsl:if test="notification_data/request/display/journal_title != ''"&gt;&#13;
			&lt;xsl:if test="$beistrich = 'true' "&gt;&#13;
				&lt;xsl:text&gt;, &lt;/xsl:text&gt;&#13;
			&lt;/xsl:if&gt;&#13;
			&lt;xsl:choose&gt;&#13;
				&lt;xsl:when test="notification_data/languages/string='de'"&gt;&#13;
					&lt;strong&gt;Titel der Zeitschrift: &lt;/strong&gt;&#13;
				&lt;/xsl:when&gt;&#13;
				&lt;xsl:otherwise&gt;&#13;
					&lt;strong&gt;Journal Title: &lt;/strong&gt;&#13;
				&lt;/xsl:otherwise&gt;&#13;
			&lt;/xsl:choose&gt;&#13;
			&lt;xsl:value-of select="notification_data/request/display/journal_title" /&gt;&#13;
			&lt;xsl:call-template name="publication_date"&gt;&#13;
				&lt;xsl:with-param name="beistrich" select="'true'" /&gt;&#13;
			&lt;/xsl:call-template&gt;&#13;
		&lt;/xsl:if&gt;&#13;
		&lt;xsl:if test="notification_data/request/display/journal_title = ''"&gt;&#13;
			&lt;xsl:call-template name="publication_date"&gt;&#13;
				&lt;xsl:with-param name="beistrich" select="$beistrich" /&gt;&#13;
			&lt;/xsl:call-template&gt;&#13;
		&lt;/xsl:if&gt;&#13;
	&lt;/xsl:template&gt;&#13;
&#13;
	&lt;xsl:template name="publication_date"&gt;&#13;
		&lt;xsl:param name="beistrich" /&gt;&#13;
		&lt;xsl:if test="notification_data/request/display/publication_date != ''"&gt;&#13;
			&lt;xsl:if test="$beistrich = 'true' "&gt;&#13;
				&lt;xsl:text&gt;, &lt;/xsl:text&gt;&#13;
			&lt;/xsl:if&gt;&#13;
			&lt;xsl:choose&gt;&#13;
				&lt;xsl:when test="notification_data/languages/string='de'"&gt;&#13;
					&lt;strong&gt;Ver√∂ffentlichungsdatum: &lt;/strong&gt;&#13;
				&lt;/xsl:when&gt;&#13;
				&lt;xsl:otherwise&gt;&#13;
					&lt;strong&gt;Publication Date: &lt;/strong&gt;&#13;
				&lt;/xsl:otherwise&gt;&#13;
			&lt;/xsl:choose&gt;&#13;
			&lt;xsl:value-of select="notification_data/request/display/publication_date"/&gt;&#13;
			&lt;xsl:call-template name="volume"&gt;&#13;
				&lt;xsl:with-param name="beistrich" select="'true'"/&gt;&#13;
			&lt;/xsl:call-template&gt;&#13;
		&lt;/xsl:if&gt;&#13;
		&lt;xsl:if test="notification_data/request/display/publication_date = ''"&gt;&#13;
			&lt;xsl:call-template name="volume"&gt;&#13;
				&lt;xsl:with-param name="beistrich" select="$beistrich" /&gt;&#13;
			&lt;/xsl:call-template&gt;&#13;
		&lt;/xsl:if&gt;&#13;
	&lt;/xsl:template&gt;&#13;
&#13;
	&lt;xsl:template name="volume"&gt;&#13;
		&lt;xsl:param name="beistrich"/&gt;&#13;
		&lt;xsl:if test="notification_data/request/display/volume != ''"&gt;&#13;
			&lt;xsl:if test="$beistrich = 'true' "&gt;&#13;
				&lt;xsl:text&gt;, &lt;/xsl:text&gt;&#13;
			&lt;/xsl:if&gt;&#13;
			&lt;xsl:choose&gt;&#13;
				&lt;xsl:when test="notification_data/languages/string='de'"&gt;&#13;
					&lt;strong&gt;Band: &lt;/strong&gt;&#13;
				&lt;/xsl:when&gt;&#13;
				&lt;xsl:otherwise&gt;&#13;
					&lt;strong&gt;Volume: &lt;/strong&gt;&#13;
				&lt;/xsl:otherwise&gt;&#13;
			&lt;/xsl:choose&gt;&#13;
&#13;
			&lt;xsl:value-of select="notification_data/request/display/volume"/&gt;&#13;
			&lt;xsl:call-template name="issue"&gt;&#13;
				&lt;xsl:with-param name="beistrich" select="'true'"/&gt;&#13;
			&lt;/xsl:call-template&gt;&#13;
		&lt;/xsl:if&gt;&#13;
		&lt;xsl:if test="notification_data/request/display/volume = ''"&gt;&#13;
			&lt;xsl:call-template name="issue"&gt;&#13;
				&lt;xsl:with-param name="beistrich" select="$beistrich" /&gt;&#13;
			&lt;/xsl:call-template&gt;&#13;
		&lt;/xsl:if&gt;&#13;
	&lt;/xsl:template&gt;&#13;
&#13;
	&lt;xsl:template name="issue"&gt;&#13;
		&lt;xsl:param name="beistrich"/&gt;&#13;
		&lt;xsl:if test="notification_data/request/display/issue != ''"&gt;&#13;
			&lt;xsl:if test="$beistrich = 'true' "&gt;&#13;
				&lt;xsl:text&gt;, &lt;/xsl:text&gt;&#13;
			&lt;/xsl:if&gt;&#13;
			&lt;xsl:choose&gt;&#13;
				&lt;xsl:when test="notification_data/languages/string='de'"&gt;&#13;
					&lt;strong&gt;Ausgabe: &lt;/strong&gt;&#13;
				&lt;/xsl:when&gt;&#13;
				&lt;xsl:otherwise&gt;&#13;
					&lt;strong&gt;Issue: &lt;/strong&gt;&#13;
				&lt;/xsl:otherwise&gt;&#13;
			&lt;/xsl:choose&gt;&#13;
&#13;
			&lt;xsl:value-of select="notification_data/request/display/issue"/&gt;&#13;
			&lt;xsl:call-template name="start_page"&gt;&#13;
				&lt;xsl:with-param name="beistrich" select="'true'"/&gt;&#13;
			&lt;/xsl:call-template&gt;&#13;
		&lt;/xsl:if&gt;&#13;
		&lt;xsl:if test="notification_data/request/display/issue = ''"&gt;&#13;
			&lt;xsl:call-template name="start_page"&gt;&#13;
				&lt;xsl:with-param name="beistrich" select="$beistrich" /&gt;&#13;
			&lt;/xsl:call-template&gt;&#13;
		&lt;/xsl:if&gt;&#13;
	&lt;/xsl:template&gt;&#13;
&#13;
	&lt;xsl:template name="start_page"&gt;&#13;
		&lt;xsl:param name="beistrich"/&gt;&#13;
		&lt;xsl:if test="notification_data/request/display/start_page  != '' or notification_data/request/display/end_page != ''"&gt;&#13;
			&lt;xsl:if test="$beistrich = 'true' "&gt;&#13;
				&lt;xsl:text&gt;, &lt;/xsl:text&gt;&#13;
			&lt;/xsl:if&gt;&#13;
			&lt;xsl:choose&gt;&#13;
				&lt;xsl:when test="notification_data/languages/string='de'"&gt;&#13;
					&lt;strong&gt;Seiten: &lt;/strong&gt;&#13;
				&lt;/xsl:when&gt;&#13;
				&lt;xsl:otherwise&gt;&#13;
					&lt;strong&gt;Pages: &lt;/strong&gt;&#13;
				&lt;/xsl:otherwise&gt;&#13;
			&lt;/xsl:choose&gt;&#13;
&#13;
			&lt;xsl:value-of select="notification_data/request/display/start_page"/&gt;&#13;
			&lt;xsl:text&gt; - &lt;/xsl:text&gt;&#13;
			&lt;xsl:value-of select="notification_data/request/display/end_page" /&gt;&#13;
			&lt;xsl:call-template name="isbn"&gt;&#13;
				&lt;xsl:with-param name="beistrich" select="'true'"/&gt;&#13;
			&lt;/xsl:call-template&gt;&#13;
		&lt;/xsl:if&gt;&#13;
		&lt;xsl:if test="not(notification_data/request/display/start_page  != '' or notification_data/request/display/end_page != '')"&gt;&#13;
			&lt;xsl:call-template name="isbn"&gt;&#13;
				&lt;xsl:with-param name="beistrich" select="$beistrich" /&gt;&#13;
			&lt;/xsl:call-template&gt;&#13;
		&lt;/xsl:if&gt;&#13;
	&lt;/xsl:template&gt;&#13;
&#13;
	&lt;xsl:template name="isbn"&gt;&#13;
		&lt;xsl:param name="beistrich"/&gt;&#13;
		&lt;xsl:if test="notification_data/request/display/isbn != ''"&gt;&#13;
			&lt;xsl:if test="$beistrich = 'true' "&gt;&#13;
				&lt;xsl:text&gt;, &lt;/xsl:text&gt;&#13;
			&lt;/xsl:if&gt;&#13;
			&lt;strong&gt;ISBN: &lt;/strong&gt;&#13;
			&lt;xsl:value-of select="notification_data/request/display/isbn"/&gt;&#13;
			&lt;xsl:call-template name="issn"&gt;&#13;
				&lt;xsl:with-param name="beistrich" select="'true'"/&gt;&#13;
			&lt;/xsl:call-template&gt;&#13;
		&lt;/xsl:if&gt;&#13;
		&lt;xsl:if test="notification_data/request/display/isbn = ''"&gt;&#13;
			&lt;xsl:call-template name="issn"&gt;&#13;
				&lt;xsl:with-param name="beistrich" select="$beistrich"/&gt;&#13;
			&lt;/xsl:call-template&gt;&#13;
		&lt;/xsl:if&gt;&#13;
	&lt;/xsl:template&gt;&#13;
&#13;
	&lt;xsl:template name="issn"&gt;&#13;
		&lt;xsl:param name="beistrich" /&gt;&#13;
		&lt;xsl:if test="notification_data/request/display/issn != ''"&gt;&#13;
			&lt;xsl:if test="$beistrich = 'true' "&gt;&#13;
				&lt;xsl:text&gt;, &lt;/xsl:text&gt;&#13;
			&lt;/xsl:if&gt;&#13;
			&lt;strong&gt;ISSN: &lt;/strong&gt;&#13;
			&lt;xsl:value-of select="notification_data/request/display/issn"/&gt;&#13;
		&lt;/xsl:if&gt;&#13;
	&lt;/xsl:template&gt;&#13;
&#13;
