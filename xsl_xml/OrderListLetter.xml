&lt;xsl:stylesheet version="1.0"&#13;
xmlns:xsl="http://www.w3.org/1999/XSL/Transform"&gt;&#13;
&#13;
&lt;xsl:include href="header.xsl" /&gt;&#13;
&lt;xsl:include href="senderReceiver.xsl" /&gt;&#13;
&lt;xsl:include href="mailReason.xsl" /&gt;&#13;
&lt;xsl:include href="footer.xsl" /&gt;&#13;
&lt;xsl:include href="style.xsl" /&gt;&#13;
&#13;
&lt;xsl:template match="/"&gt;&#13;
	&lt;html&gt;&#13;
		&lt;head&gt;&#13;
		&lt;xsl:call-template name="generalStyle" /&gt;&#13;
		&lt;/head&gt;&#13;
&#13;
			&lt;body&gt;&#13;
			&lt;xsl:attribute name="style"&gt;&#13;
				&lt;xsl:call-template name="bodyStyleCss" /&gt; &lt;!-- style.xsl --&gt;&#13;
			&lt;/xsl:attribute&gt;&#13;
&#13;
				&lt;xsl:call-template name="head" /&gt; &lt;!-- header.xsl --&gt;&#13;
				&lt;xsl:call-template name="senderReceiver" /&gt; &lt;!-- SenderReceiver.xsl --&gt;&#13;
&#13;
				&lt;br /&gt;&#13;
				&lt;!--xsl:call-template name="toWhomIsConcerned" /--&gt; &lt;!-- mailReason.xsl --&gt;&#13;
&#13;
				&lt;xsl:for-each select="notification_data/letter_texts"&gt;&#13;
				&lt;table cellspacing="0" cellpadding="5" border="0"&gt;&#13;
					&lt;tr&gt;&#13;
						&lt;xsl:variable name="order_introduction"&gt;&#13;
							&lt;xsl:text&gt;@@place_order_introduction@@&lt;/xsl:text&gt;&#13;
						&lt;/xsl:variable&gt;&#13;
						&lt;td&gt;&lt;xsl:value-of select="$order_introduction" disable-output-escaping="yes"/&gt;:&lt;/td&gt;&#13;
					&lt;/tr&gt;&#13;
				&lt;/table&gt;&#13;
				&lt;br /&gt;&#13;
&#13;
				&lt;/xsl:for-each&gt;&#13;
				&lt;xsl:for-each select="notification_data"&gt;&#13;
				&lt;table&gt;&#13;
					&lt;tr&gt;&#13;
						&lt;td&gt;&lt;b&gt;@@order_date@@: &lt;/b&gt; &lt;xsl:value-of select="/notification_data/po/create_date"/&gt;&lt;/td&gt;&#13;
					&lt;/tr&gt;&#13;
					&lt;!--tr&gt;&#13;
						&lt;td&gt;&lt;b&gt;@@vendor_account@@: &lt;/b&gt;&lt;xsl:value-of select="/notification_data/po/vendor_account/description"/&gt;&lt;/td&gt;&#13;
					&lt;/tr--&gt;&#13;
					&lt;tr&gt;&#13;
						&lt;td&gt;&lt;b&gt;@@shipping_address@@: &lt;/b&gt;&lt;xsl:value-of select="/notification_data/po/ship_to_address/line1"/&gt;,&amp;#160;&lt;xsl:value-of select="/notification_data/po/ship_to_address/line2"/&gt;&lt;!-- &amp;#160;&lt;xsl:value-of select="/notification_data/po/ship_to_address/city"/&gt;&amp;#160;&lt;xsl:value-of select="/notification_data/po/ship_to_address/country"/ --&gt;&lt;/td&gt;&#13;
					&lt;/tr&gt;&#13;
					&lt;!--tr&gt;&#13;
						&lt;td&gt;&lt;b&gt;@@shipping_method@@: &lt;/b&gt;&lt;xsl:value-of select="/notification_data/po/shipping_method"/&gt;&lt;/td&gt;&#13;
					&lt;/tr--&gt;&#13;
					&lt;tr&gt;&#13;
						&lt;td&gt;&lt;b&gt;@@billing_address@@: &lt;/b&gt;&lt;xsl:value-of select="/notification_data/po/bill_to_address/line1"/&gt;,&amp;#160;&lt;xsl:value-of select="/notification_data/po/bill_to_address/line2"/&gt;&lt;!-- &amp;#160;&lt;xsl:value-of select="/notification_data/po/bill_to_address/city"/&gt;&amp;#160;&lt;xsl:value-of select="/notification_data/po/bill_to_address/country"/ --&gt;&lt;/td&gt;&#13;
					&lt;/tr&gt;&#13;
					&lt;xsl:if test="/notification_data/po/po_line_list/po_line/funds_transaction_items/funds_transaction_item/fund/code != ''"&gt;&#13;
					&lt;tr&gt;&#13;
						&lt;td&gt;&lt;b&gt;@@note@@: &lt;/b&gt;&lt;xsl:value-of select="/notification_data/po/po_line_list/po_line/funds_transaction_items/funds_transaction_item/fund/code"/&gt;&amp;#160;&lt;xsl:value-of select="/notification_data/po/po_line_list/po_line/funds_transaction_items/funds_transaction_item/fund/fiscal_period_desc"/&gt;&lt;/td&gt;&#13;
 					&lt;/tr&gt;&#13;
					&lt;/xsl:if&gt;&#13;
					&lt;xsl:if test="/notification_data/po/erp_number != ''"&gt;&#13;
						&lt;tr&gt;&#13;
							&lt;td&gt;&lt;b&gt;@@erp_number@@: &lt;/b&gt;&lt;xsl:value-of select="/notification_data/po/erp_number"/&gt;&lt;/td&gt;&#13;
						&lt;/tr&gt;&#13;
					&lt;/xsl:if&gt;&#13;
				&lt;/table&gt;&#13;
				&lt;/xsl:for-each&gt;&#13;
				&lt;br /&gt;&#13;
&#13;
&#13;
				&lt;table cellpadding="5" class="listing"&gt;&#13;
				&lt;xsl:attribute name="style"&gt;&#13;
					&lt;xsl:call-template name="mainTableStyleCss" /&gt; &lt;!-- style.xsl --&gt;&#13;
				&lt;/xsl:attribute&gt;&#13;
					&lt;tr&gt;&#13;
						&lt;th&gt;@@po_line_number@@&lt;/th&gt;&#13;
						&lt;th&gt;@@date@@&lt;/th&gt;&#13;
						&lt;th&gt;@@issn_isbn@@&lt;/th&gt;&#13;
						&lt;th&gt;@@title@@&lt;/th&gt;&#13;
						&lt;th&gt;@@quantity@@&lt;/th&gt;&#13;
						&lt;th align="right"&gt;@@price@@&lt;/th&gt;&#13;
						&lt;th&gt;@@note@@&lt;/th&gt;&#13;
					&lt;/tr&gt;&#13;
					&lt;xsl:for-each select="notification_data/po/po_line_list/po_line"&gt;&#13;
					&lt;tr&gt;&#13;
						&lt;td&gt;&lt;xsl:value-of select="line_reference"/&gt;&lt;/td&gt;&#13;
						&lt;td&gt;&lt;xsl:value-of select="create_date"/&gt;&lt;/td&gt;&#13;
						&lt;td&gt;&lt;xsl:value-of select="identifier_type"/&gt;&amp;#160;&lt;xsl:value-of select="identifier"/&gt;&lt;/td&gt;&#13;
						&lt;td&gt;&lt;xsl:value-of select="meta_data_values/title"/&gt;&lt;/td&gt;&#13;
						&lt;td&gt;&lt;xsl:value-of select="total_quantity"/&gt;&lt;/td&gt;&#13;
						&lt;td align="right"&gt;&lt;xsl:value-of select="total_price_compose/currency"/&gt;&amp;#160;&lt;xsl:value-of select="total_price_compose/sum"/&gt;&lt;/td&gt;&#13;
						&lt;td&gt;&lt;xsl:value-of select="vendor_note"/&gt;&lt;/td&gt;&#13;
					&lt;/tr&gt;&#13;
					&lt;/xsl:for-each&gt;&#13;
				&lt;/table&gt;&#13;
				&lt;br /&gt;&#13;
				&lt;table&gt;&#13;
&#13;
						&lt;tr&gt;&lt;td&gt;@@sincerely@@&lt;/td&gt;&lt;/tr&gt;&#13;
&lt;xsl:choose&gt;&#13;
  &lt;xsl:when test="notification_data/po/bill_to_address/line1"&gt;&#13;
						&lt;tr&gt;&lt;td&gt;&lt;xsl:value-of select="notification_data/po/bill_to_address/line1"/&gt;,&amp;#160;&lt;xsl:value-of select="notification_data/po/bill_to_address/line2"/&gt;&lt;/td&gt;&lt;/tr&gt;&#13;
  &lt;/xsl:when&gt;&#13;
  &lt;xsl:otherwise&gt;&#13;
						&lt;tr&gt;&lt;td&gt;@@department@@&lt;/td&gt;&lt;/tr&gt;&#13;
  &lt;/xsl:otherwise&gt;&#13;
&lt;/xsl:choose&gt;&#13;
&#13;
				&lt;/table&gt;&#13;
&#13;
&#13;
				&lt;xsl:call-template name="lastFooter" /&gt; &lt;!-- footer.xsl --&gt;&#13;
			&lt;/body&gt;&#13;
	&lt;/html&gt;&#13;
&lt;/xsl:template&gt;&#13;
&#13;
&lt;/xsl:stylesheet&gt;</xsl></letter>